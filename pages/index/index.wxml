<view class="container"> 
 <view class="weui-tab"> 
  <view class="weui-navbar"> 
   <block wx:for-items="{{tabs0}}" wx:key="{{index}}"> 
    <view id="{{index}}" class="weui-navbar__item {{activeIndex0 == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick0"> 
     <view class="weui-navbar__title">
      {{item}}
     </view> 
    </view> 
   </block> 
   <view class="weui-navbar__slider" style="left: {{sliderLeft0}}px; transform: translateX({{sliderOffset0}}px); -webkit-transform: translateX({{sliderOffset0}}px);"></view> 
  </view> 
  <view class="weui-tab__panel"> 
   <view class="weui-tab__content" hidden="{{activeIndex0 != 0}}"> 
    <button class="weui-btn" type="primary">按钮</button> 
   </view> 
   <view class="weui-tab__content" hidden="{{activeIndex0 != 1}}"> 
    <button class="weui-btn" type="primary">按钮</button> 
   </view> 
   <view class="weui-tab__content" hidden="{{activeIndex0 != 2}}"> 
    <view>
      选项三为内容哟 
    </view> 
   </view> 
  </view> 
 </view>  
 <view class="weui-grids"> 
  <navigator bindtap="navigateTo" url="" data-url="/pages/index/index" class="weui-grid" hover-class="weui-grid_active"> 
   <image class="weui-grid__icon" src="/assets/images/html580.png" /> 
   <view class="weui-grid__label">
    首页
   </view> 
  </navigator> 
  <navigator bindtap="navigateTo" url="" data-url="/pages/error/index" class="weui-grid" hover-class="weui-grid_active"> 
   <image class="weui-grid__icon" src="/assets/images/icon_tabbar.png" /> 
   <view class="weui-grid__label">
    跳转哟
   </view> 
  </navigator> 
  <navigator bindtap="navigateTo" url="" data-url="/pages/form/index" class="weui-grid" hover-class="weui-grid_active"> 
   <image class="weui-grid__icon" src="/assets/images/icon_tabbar.png" /> 
   <view class="weui-grid__label">
    表单页
   </view> 
  </navigator> 
 </view> 
